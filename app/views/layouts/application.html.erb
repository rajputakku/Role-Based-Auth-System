<!DOCTYPE html>
<html>
  <head>
    <title>RoleBasedAuthSys</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render "layouts/navigation" %>
  <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash alert alert-info <%= key %>" style="text-align: center"><%= value %></div>
      <% end %>
    </div>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
